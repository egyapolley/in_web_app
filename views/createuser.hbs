<div class="login-body-container">


    <div class="create-user-container">
        <h3>Create User Account</h3>
        <div class="message-box">
            <div class="manageVoucher-error" id="create-acct-error">
                <button id="times-button-error" class="times-button">&times;</button>
                <i class="fas fa-exclamation-triangle"></i>
                <small></small>
            </div>

            <div class="manageVoucher-success" id="create-acct-success">
                <button id="times-button-success" class="times-button">&times;</button>
                <i class="fas fa-thumbs-up"></i>
                <small></small>
            </div>
        </div>



            <form action="/user" method="post" id="create-user-form">
                <div class="create-user-flex-container">
                    <div class="flex-item">
                        <div class="form-control block">
                            <label for="username">Username</label>
                            <input type="text" id="username" name="username" required autofocus >
                        </div>

                        <div class="form-control block">
                            <label for="email">Email Address</label>
                            <input type="email" id="email" name="email" required>
                        </div>
                        <div class="form-control block">
                            <label for="firstname">Firstname</label>
                            <input type="text" id="firstname" name="firstname" required>
                        </div>
                        <div class="form-control block">
                            <label for="lastname">Lastname</label>
                            <input type="text" id="lastname" name="lastname" required>
                        </div>

                    </div>
                    <div class="flex-item">
                        <div class="form-control block">
                            <label for="password">Password</label>
                            <input type="password" id="password" name="password" required>
                        </div>
                        <div class="form-control block">
                            <label for="password2">Confirm Password</label>
                            <input type="password" id="password2" name="password2" required>
                        </div>
                        <div class="form-control block">

                            <label for="role">Role</label>
                            <select name="role" id="role" required>
                                <option value="l1">Level 1</option>
                                <option value="l1">Level 2</option>
                                <option value="l1">Level 3</option>
                            </select>

                            <div class="form-control">

                                <div id="progressIndicator-create-acct" class="progressIndicator">
                                    <img src="/images/ajax-loader.gif" alt="Loading Bundles...">
                                </div>

                            </div>




                        </div>
                    </div>

                </div>

                <div class="form-control-create-btn">
                    <button type="button" class="create-user-home-btn" id="exit-btn">Exit</button>
                    <button type="submit" class="create-user-submit-btn">Submit</button>

                </div>

            </form>



    </div>

</div>
